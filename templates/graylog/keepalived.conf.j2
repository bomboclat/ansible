vrrp_script chk_nginx {
    script '/bin/killall -0 nginx';
    interval 1
    weight -60
}

vrrp_instance VI_1 {
    interface {{ keepalived_interface }}
    state BACKUP
    virtual_router_id 51
    priority {{ keepalived_vrrp_priority }}
    authentication {
        auth_type PASS
        auth_pass {{ keepalived_vrrp_password }}
    }
    track_script {
      chk_nginx
    }
    virtual_ipaddress {
        # virtual IP address
{% for vip in keepalived_vrrp_vips %}
	{{ vip }} dev {{ keepalived_interface }}
{% endfor %}
    }
}
